.chat-side
  .side-header
    %h3.side-header__box
      = current_user.name
      %p.side-header__box__user-name 
      %ul.side-header__box__menu         
        %li.side-header__box__menu__new-group
          = link_to new_group_path, class: "side__header__btn" do
            = icon('fa','edit')
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user), class: "side__header__btn" do
            = icon('fas','cog' )
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message